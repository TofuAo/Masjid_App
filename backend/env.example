# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=masjid_app

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=24h

# Server Configuration
PORT=5000
NODE_ENV=development

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# Email Configuration (Gmail)
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password-here
EMAIL_FROM_NAME=Masjid App

# Google Drive Backup Configuration
# Option 1: Paste the JSON key directly (recommended for containerized deployments)
# GOOGLE_DRIVE_SERVICE_ACCOUNT={
#   "type": "service_account",
#   ...
# }

# Option 2: Provide the path to the JSON key file relative to project root
GOOGLE_APPLICATION_CREDENTIALS=backend/google-service-account.json

# Optional: Destination folder in Google Drive (leave empty to upload to root)
GOOGLE_DRIVE_FOLDER_ID=

# Scheduler configuration (defaults run on 31 Dec 23:55 server time)
DATABASE_BACKUP_CRON=55 23 31 12 *
DATABASE_BACKUP_TIMEZONE=Asia/Kuala_Lumpur
DISABLE_ANNUAL_DATABASE_EXPORT=false

# Announcement cleanup scheduler (defaults run daily at 03:00 server time)
ANNOUNCEMENT_CLEANUP_CRON=0 3 * * *
ANNOUNCEMENT_CLEANUP_TIMEZONE=Asia/Kuala_Lumpur
DISABLE_ANNOUNCEMENT_CLEANUP=false

# Set to true if you want to keep .sql.gz files on the server after upload
RETAIN_LOCAL_DATABASE_BACKUPS=false